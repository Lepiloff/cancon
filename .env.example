# ========================================
# Canna - Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# Django Settings
# ========================================
# IMPORTANT: Generate a unique SECRET_KEY for production!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-random-secret-key
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.127.0.0.1

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
POSTGRES_DB=mydatabase
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ========================================
# AWS S3 Storage (Optional)
# ========================================
USE_S3=FALSE
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name

# ========================================
# LLM Provider Settings
# ========================================
# Choose LLM provider for translations and copywriting: 'openai' or 'anthropic'
LLM_PROVIDER=anthropic

# ========================================
# Anthropic (Claude) Settings
# ========================================
# Required when LLM_PROVIDER=anthropic
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ========================================
# OpenAI Translation Settings (legacy)
# ========================================
# Required when LLM_PROVIDER=openai
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Optional: OpenAI model configuration
OPENAI_AGENT_MODEL=gpt-4o-mini
AGENT_TEMPERATURE=0.3

# Optional: Translation settings
# OPENAI_MAX_TOKENS=4000
# OPENAI_TIMEOUT=60
# TRANSLATION_PAUSE_SECONDS=1.5

# Optional: Enable/disable auto-translation in admin
# If not set, auto-translation is enabled when OPENAI_API_KEY is present
# ENABLE_AUTO_TRANSLATION=True

# Optional: Translation direction (en-to-es or es-to-en)
# TRANSLATION_DIRECTION=en-to-es

# ========================================
# Notes
# ========================================
# - Copy this file: cp .env.example .env
# - Never commit .env to git (it's in .gitignore)
# - For production, add these variables to your deployment environment
# - Auto-translation works only if OPENAI_API_KEY is set
# - UI translations (buttons, labels) don't require OpenAI

# ========================================
# AI Budtender Chat Configuration
# ========================================
# Enable/disable the AI chat widget on the website
# Set to 'true' to show the chat bubble, 'false' to hide it
ENABLE_AI_CHAT=false
